
<div class="slight_rounding login_container">

    <% flash.each do |name, msg| %>

        <div class="fieldContainer">
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
        </div>
        <br/>

    <% end %>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <div class="fieldContainer">

        <div class="fieldLabel">
            <%= f.label :username, "User Name" %>
        </div>
        <div class="field">
            <%= f.text_field :username, :size => 25 %>
        </div>

    </div>
    <div class="fieldContainer">

        <div class="fieldLabel">
            <%= f.label :password, "Password" %>
        </div>
        <div class="field">
            <%= f.password_field :password, :size => 25 %>
        </div>
    </div>

    <div class="fieldContainer">

        <div class="fieldLabel"><%= f.submit "Sign in" %></div>

        <% if devise_mapping.rememberable? -%>
        <div class="field"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

    </div>
   <br/>

<% end %>

<%= render :partial => "devise/shared/links" %>

</div>